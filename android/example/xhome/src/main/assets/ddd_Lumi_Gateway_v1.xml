                                <direction>in</direction>
                                <relatedProperty>MusicIndex</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>

                    <action>
                        <friendlyName>playDoorbellMusic</friendlyName>
                        <internalName>door_bell</internalName>
