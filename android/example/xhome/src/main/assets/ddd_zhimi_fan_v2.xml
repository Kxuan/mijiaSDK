<?xml version="1.0" encoding="UTF-8"?>
<root xmlns="urn:schemas-mi-com:device-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <device>
        <type>urn:schemas-mi-com:device:Zhimi:Fan:1</type>
        <friendlyName>智米风扇</friendlyName>
        <firmwareVersion>1</firmwareVersion>
        <modelNumber>2015</modelNumber>
        <modelName>zhimi.fan.v2</modelName>
        <modelDescription>智米风扇</modelDescription>
        <modelURL>http://www.mi.com</modelURL>
        <manufacturer>Xiaomi</manufacturer>
        <manufacturerURL>http://www.mi.com</manufacturerURL>

        <serviceList>
            <service>
                <type>urn:schemas-mi-com:service:Fan:Service:1</type>

                <description>风扇服务</description>
                <propertyList>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Temp</friendlyName>
                        <internalName>temp_dec</internalName>
                        <description>温度×10, 取值范围[-400,1250]</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>-400</minimum>
                            <maximum>1250</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Humidity</friendlyName>
                        <internalName>humidity</internalName>
                        <description>湿度百分比</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>100</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>SpeedLevel</friendlyName>
                        <internalName>speed_level</internalName>
                        <description>转速档位</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>1</minimum>
                            <maximum>100</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>NaturalLevel</friendlyName>
                        <internalName>natural_level</internalName>
                        <description>自然风档位</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>100</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Angle</friendlyName>
                        <internalName>angle</internalName>
                        <description>转动角度</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>30</minimum>
                            <maximum>120</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>AngleEnable</friendlyName>
                        <internalName>angle_enable</internalName>
                        <description>打开转动</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Power</friendlyName>
                        <internalName>power</internalName>
                        <description>运行状态，开关机</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>ACPower</friendlyName>
                        <internalName>ac_power</internalName>
                        <description>运行状态，开关机</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>BatCharge</friendlyName>
                        <internalName>bat_charge</internalName>
                        <description>电池充电状态</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>complete</allowedValue>
                            <allowedValue>progress</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Battery</friendlyName>
                        <internalName>battery</internalName>
                        <description>电池电量</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>-1</minimum>
                            <maximum>100</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>ChildLock</friendlyName>
                        <internalName>child_lock</internalName>
                        <description>童锁</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>

                </propertyList>

                <actionList>
                    <action>
                        <friendlyName>setAngle</friendlyName>
                        <internalName>set_angle</internalName>
                        <description>设置转动角度</description>
                        <argumentList>
                            <argument>
                                <name>angle</name>
                                <direction>in</direction>
                                <relatedProperty>Angle</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setAngleEnable</friendlyName>
                        <internalName>set_angle_enable</internalName>
                        <description>开关转动角度</description>
                        <argumentList>
                            <argument>
                                <name>angleEnable</name>
                                <direction>in</direction>
                                <relatedProperty>AngleEnable</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setPower</friendlyName>
                        <internalName>set_power</internalName>
                        <description>设置开关</description>
                        <argumentList>
                            <argument>
                                <name>power</name>
                                <direction>in</direction>
                                <relatedProperty>Power</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setSpeedLevel</friendlyName>
                        <internalName>set_speed_level</internalName>
                        <description>设置风扇转速</description>
                        <argumentList>
                            <argument>
                                <name>speedLevel</name>
                                <direction>in</direction>
                                <relatedProperty>SpeedLevel</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setNaturalLevel</friendlyName>
                        <internalName>set_natural_level</internalName>
                        <description>设置自然风转速</description>
                        <argumentList>
                            <argument>
                                <name>naturalLevel</name>
                                <direction>in</direction>
                                <relatedProperty>NaturalLevel</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setChildLock</friendlyName>
                        <internalName>set_child_lock</internalName>
                        <description>设置童锁</description>
                        <argumentList>
                            <argument>
                                <name>childLock</name>
                                <direction>in</direction>
                                <relatedProperty>ChildLock</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                </actionList>

            </service>
        </serviceList>
    </device>
</root>
