<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Label">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black_80_transparent</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
    </style>
    <style name="Label.Desc">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/font_size_15sp</item>
    </style>
    <style name="Device" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_device_btn</item>
<!--        <item name="android:layout_marginTop">6dp</item>-->
        <item name="android:textColor">@color/black_80_transparent</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
        <item name="android:layout_height">@dimen/btn_normal_height</item>
    </style>
    <style name="Device.Small">
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:layout_height">@dimen/btn_small_height</item>
    </style>
    <style name="Device.Large">
        <item name="android:textSize">@dimen/font_size_20sp</item>
        <item name="android:layout_height">@dimen/btn_large_height</item>
    </style>
    <style name="Device.Green">
        <item name="android:background">@drawable/ripple_device_btn_green</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Device.Green.Large">
        <item name="android:textSize">@dimen/font_size_20sp</item>
        <item name="android:layout_height">@dimen/btn_large_height</item>
    </style>
    <style name="Device.Green.Small">
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:layout_height">@dimen/btn_small_height</item>
    </style>

</resources>