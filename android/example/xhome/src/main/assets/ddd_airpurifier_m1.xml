<?xml version="1.0" encoding="UTF-8"?>
<root xmlns="urn:schemas-mi-com:device-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <device>
        <type>urn:schemas-mi-com:device:AirPurifier:M:1</type>
        <friendlyName>米家空气净化器2代</friendlyName>
        <firmwareVersion>1</firmwareVersion>
        <modelNumber>2015</modelNumber>
        <modelName>AirPurifier.2015</modelName>
        <modelDescription>米家空气净化器2代</modelDescription>
        <modelURL>http://www.mi.com</modelURL>
        <manufacturer>Xiaomi</manufacturer>
        <manufacturerURL>http://www.mi.com</manufacturerURL>

        <serviceList>
            <service>
                <type>urn:schemas-mi-com:service:AirPurifier:MService:1</type>

                <description>空气净化服务</description>
                <propertyList>
                    <property gettable="true" notifiable="true">
                        <friendlyName>AirAutoDetect</friendlyName>
                        <internalName>act_det</internalName>
                        <description>自动检测空气质量: on|off</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>AirQualityIndex</friendlyName>
                        <internalName>aqi</internalName>
                        <description>空气质量指数: [0, 600]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>600</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>AirGoodThreshold</friendlyName>
                        <internalName>aq_good</internalName>
                        <description>空气质量优、良阈值: [40, 200]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>40</minimum>
                            <maximum>200</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>AirMedThreshold</friendlyName>
                        <internalName>aq_med</internalName>
                        <description>空气质量良、差阈值: [101, 400]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>101</minimum>
                            <maximum>400</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="false" notifiable="true">
                        <friendlyName>AirQualityScale</friendlyName>
                        <internalName>aq_scale</internalName>
                        <description>空气质量传感器系数: [300, 600]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>300</minimum>
                            <maximum>600</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="false" notifiable="true">
                        <friendlyName>Brightness</friendlyName>
                        <internalName>bright</internalName>
                        <description>室内亮度: [0, 200]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>200</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Buzzer</friendlyName>
                        <internalName>buzzer</internalName>
                        <description>蜂鸣器状态: on|off</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="false" notifiable="true">
                        <friendlyName>ElecLock</friendlyName>
                        <internalName>child_lock</internalName>
                        <description>电子锁: on|off</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>FilterMaxLife</friendlyName>
                        <internalName>f1_hour</internalName>
                        <description>滤网1的最大寿命，单位是小时: [2000, 6000]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>2000</minimum>
                            <maximum>6000</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>FilterUsed</friendlyName>
                        <internalName>f1_hour_used</internalName>
                        <description>滤网使用时长: [0, 6000]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>6000</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>FilterLife</friendlyName>
                        <internalName>filter1_life</internalName>
                        <description>滤网所剩生命百分比: [0, 100]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>100</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Led</friendlyName>
                        <internalName>led</internalName>
                        <description>LED灯状态: on|off</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Humidity</friendlyName>
                        <internalName>humidity</internalName>
                        <description>湿度: [0, 100]</description>
                        <dataType>ui4</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>100</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>LedBrightness</friendlyName>
                        <internalName>led_b</internalName>
                        <description>LED灯亮度: [5,10]</description>
                        <dataType>ui4</dataType>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Mode</friendlyName>
                        <internalName>mode</internalName>
                        <description>模式</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>idle</allowedValue>
                            <allowedValue>auto</allowedValue>
                            <allowedValue>silent</allowedValue>
                            <allowedValue>strong</allowedValue>
                            <allowedValue>high</allowedValue>
                            <allowedValue>medium</allowedValue>
                            <allowedValue>low</allowedValue>
                            <allowedValue>favorite</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="false" notifiable="true">
                        <friendlyName>VocState</friendlyName>
                        <internalName>voc_state</internalName>
                        <description>VOC浓度</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>good</allowedValue>
                            <allowedValue>med</allowedValue>
                            <allowedValue>bad</allowedValue>
                        </allowedValueList>
                    </property>

                    <property gettable="false" notifiable="true">
                        <friendlyName>FilterDoorOpened</friendlyName>
                        <internalName>filter_door_opened</internalName>
                        <description>滤网盖被打开了</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="false" notifiable="true">
                        <friendlyName>UpCoverRemoved</friendlyName>
                        <internalName>up_cover_removed</internalName>
                        <description>上盖被打开了</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                </propertyList>

                <actionList>
                    <action>
                        <friendlyName>setAirAutoDetect</friendlyName>
                        <internalName>set_act_det</internalName>
                        <description>设置关机自主检测空气质量开关</description>
                        <argumentList>
                            <argument>
                                <name>airAutoDetect</name>
                                <direction>in</direction>
                                <relatedProperty>AirAutoDetect</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setAirGoodThreshold</friendlyName>
                        <internalName>set_aq_good</internalName>
                        <description>设置空气优良阈值</description>
                        <argumentList>
                            <argument>
                                <name>airGoodThreshold</name>
                                <direction>in</direction>
                                <relatedProperty>AirGoodThreshold</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setAirMedThreshold</friendlyName>
                        <internalName>set_aq_med</internalName>
                        <description>设置空气良差阈值</description>
                        <argumentList>
                            <argument>
                                <name>airMedThreshold</name>
                                <direction>in</direction>
                                <relatedProperty>AirMedThreshold</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setAirQualityScale</friendlyName>
                        <internalName>set_aq_scale</internalName>
                        <description>设置空气传感器系数</description>
                        <argumentList>
                            <argument>
                                <name>airQualityScale</name>
                                <direction>in</direction>
                                <relatedProperty>AirQualityScale</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setBuzzer</friendlyName>
                        <internalName>set_buzzer</internalName>
                        <description>设置蜂鸣器</description>
                        <argumentList>
                            <argument>
                                <name>buzzer</name>
                                <direction>in</direction>
                                <relatedProperty>Buzzer</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setElecLock</friendlyName>
                        <internalName>set_child_lock</internalName>
                        <description>设置蜂鸣器</description>
                        <argumentList>
                            <argument>
                                <name>elecLock</name>
                                <direction>in</direction>
                                <relatedProperty>ElecLock</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setLed</friendlyName>
                        <internalName>set_led</internalName>
                        <description>设置Led灯状态</description>
                        <argumentList>
                            <argument>
                                <name>led</name>
                                <direction>in</direction>
                                <relatedProperty>Led</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setLed</friendlyName>
                        <internalName>set_led</internalName>
                        <description>设置Led灯状态</description>
                        <argumentList>
                            <argument>
                                <name>led</name>
                                <direction>in</direction>
                                <relatedProperty>Led</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setLedBrightness</friendlyName>
                        <internalName>set_led_b</internalName>
                        <description>设置LED灯亮度</description>
                        <argumentList>
                            <argument>
                                <name>ledBrightness</name>
                                <direction>in</direction>
                                <relatedProperty>LedBrightness</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setMode</friendlyName>
                        <internalName>set_mode</internalName>
                        <description>设置空净模式</description>
                        <argumentList>
                            <argument>
                                <name>mode</name>
                                <direction>in</direction>
                                <relatedProperty>Mode</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                </actionList>

            </service>
        </serviceList>
    </device>
</root>
