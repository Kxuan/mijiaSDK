<?xml version="1.0" encoding="UTF-8"?>
<root xmlns="urn:schemas-mi-com:device-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>

    <device>
        <type>urn:schemas-mi-com:device:Zhimi:AirMonitor:1</type>
        <friendlyName>米家PM2.5检测仪</friendlyName>
        <firmwareVersion>1</firmwareVersion>
        <modelName>zhimi.airmonitor.v1</modelName>
        <modelNumber>2016</modelNumber>
        <modelDescription>米家PM2.5检测仪</modelDescription>
        <manufacturer>Xiaomi</manufacturer>
        <manufacturerURL>http://www.mi.com</manufacturerURL>
        
        <serviceList>
            <service>
                <type>urn:schemas-mi-com:service:AirMonitor:BaseService:1</type>
                <description>米家PM2.5检测仪服务</description>
                <propertyList>
                    <property gettable="true" notifiable="true">
                        <friendlyName>AQI</friendlyName>
                        <internalName>aqi</internalName>
                        <description>PM2.5指数</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>600</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>Battery</friendlyName>
                        <internalName>battery</internalName>
                        <description>电池电量</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>100</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>TimeState</friendlyName>
                        <internalName>time_state</internalName>
                        <description>时间界面开关状态</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>AutoCloseState</friendlyName>
                        <internalName>auto_close</internalName>
                        <description>自动待机状态</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>NightState</friendlyName>
                        <internalName>night_state</internalName>
                        <description>夜晚模式</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>on</allowedValue>
                            <allowedValue>off</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>NightBegTime</friendlyName>
                        <internalName>night_beg_time</internalName>
                        <description>夜晚模式起始时间</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>86399</maximum>
                        </allowedValueRange>
                    </property>
                    <property gettable="true" notifiable="true">
                        <friendlyName>NightEndTime</friendlyName>
                        <internalName>night_end_time</internalName>
                        <description>夜晚模式截止时间</description>
                        <dataType>int</dataType>
                        <allowedValueRange>
                            <minimum>0</minimum>
                            <maximum>86399</maximum>
                        </allowedValueRange>
                    </property>
                </propertyList>
                
                <actionList>
                    <action>
                        <friendlyName>setTimeState</friendlyName>
                        <internalName>set_time_state</internalName>
                        <description>设置界面时间显示</description>
                        <argumentList>
                            <argument>
                                <name>TimeState</name>
                                <direction>in</direction>
                                <relatedProperty>TimeState</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setAutoClose</friendlyName>
                        <internalName>set_auto_close</internalName>
                        <description>设置自动待机</description>
                        <argumentList>
                            <argument>
                                <name>AutoCloseState</name>
                                <direction>in</direction>
                                <relatedProperty>AutoCloseState</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setNightState</friendlyName>
                        <internalName>set_night_state</internalName>
                        <description>设置夜晚模式</description>
                        <argumentList>
                            <argument>
                                <name>NightState</name>
                                <direction>in</direction>
                                <relatedProperty>NightState</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <friendlyName>setNightTime</friendlyName>
                        <internalName>set_night_time</internalName>
                        <description>设置夜晚模式起止时间</description>
                        <argumentList>
                            <argument>
                                <name>NightBegTime</name>
                                <direction>in</direction>
                                <relatedProperty>NightBegTime</relatedProperty>
                            </argument>
                            <argument>
                                <name>NightEndTime</name>
                                <direction>in</direction>
                                <relatedProperty>NightEndTime</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                </actionList>
            </service>
        </serviceList>
    </device>
</root>